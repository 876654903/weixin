page {
  width: 100%;
  height: 100%;
}

.contract {
  height: 100%;
  position: relative;
}

.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.contract-box {
  position: absolute;
  top: 32rpx;
  left: 30rpx;
  z-index: 33;
}

.contract-box-list {
  width: 690rpx;
  height: 310rpx;
  background: #fff;
  box-shadow: 0 8rpx 10rpx 2rpx rgba(210, 227, 235, 0.50);
  border-radius: 4rpx;
  margin-bottom: 35.6rpx;
  box-sizing: border-box;
  padding: 0 46rpx;
}

.contract-title {
  height: 84rpx;
  line-height: 84rpx;
  border-bottom: 1px solid #e1e1e1;
}

.contract-title .iconfont {
  color: orangered;
  font-size: 32rpx;
}

.contract-list {
  padding-top: 38rpx;
}

.row {
  display: flex;
  height: 40rpx;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 12rpx;
  width: 53%;
}

.contract-classify {
  font-size: 28rpx;
  color: #c2c2c2;
  letter-spacing: -0.34rpx;
  margin-right: 41.8rpx;
}

.submit {
  width: 170rpx;
  height: 56rpx;
  background: #349bff;
  border-radius: 100px;
  color: #fff;
  line-height: 56rpx;
  font-size: 28rpx;
  float: right;
  margin-top: -75rpx;
}

.change-color {
  background: rgba(176, 176, 176, 0.25);
  border-radius: 4px;
}

<!--pages/login/login.wxml-->
<view class="login">

  <image src="../../img/clipboard.png" class="banner"></image>

  <form bindsubmit="formSubmit" bindreset="formReset">

    <view class="section">
      <image src="../../img/ipone.jpg"></image>
      <input name="username" placeholder="请输入手机号" placeholder-class="placeholderI"/>
    </view>
    <view class="section sectionNu">
      <span>
        <image src="../../img/360.jpg"></image>
        <input name="code" placeholder="请输入验证码" placeholder-class="placeholderI"/>
      </span>

      <span class="proving">获取验证码</span>
    </view> 

    <view class="btn-area1">
      <button formType="submit">立即登录</button>
      <!-- <button formType="reset">Reset</button> -->
    </view>
  </form>
 
  <view class="serve">
    点击登录即代表已同意 <span>《励步服务中心协议》</span>
  </view>

</view>


